// Gallery

mixin gallery(data)
	section.globalGallery(data-aos="fade-up") 
		.section_in 
			.gallery_main 
				.gallery_head 
					.gallery_title 
						h4=data.title
					.gallery_nav(class=`${data.class}_nav`) 
						.gallery_nav_btn(class=`${data.class}_prev`)
							+icon('prev')
						.gallery_nav_btn(class=`${data.class}_next`)
							+icon('prev')
				.gallery_slider_w 
					.gallery_slider.swiper 
						.swiper-wrapper 
							-for(i = 0; i < data.count; i++)
								- let slide = `i/${data.img}/${data.img}_${i}.jpg`
									.swiper-slide 
										.gallery_slide 
											a(href=slide data-fancybox="gallery")
												img(src=slide, alt="")
						.gallery_bottomNav 
							.gallery_scrollbar 
							.gallery_pagination

// End gallery

