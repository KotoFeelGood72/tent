// BTN
mixin btn(data)
	.btn-global.btn(class=data.class data-target=data.target ? data.target : '' class=data.trigger ? data.trigger : '')
		if data.link 
			a(href="/")
				p=data.name
				.global_btn_icon
					+icon('arrow-right-work')
		else 
			button(type=data.type ? data.type : 'button')
				p=data.name
				.global_btn_icon
					+icon('arrow-right-work')
// BTN

// INPUT 
mixin input(data)
	if data.btn
		.global_btn.btn(class=`${data.class}_btn_w`)
			input(type="submit" value=data.val ? data.val : 'Отправить')
	else
		.global_input(class=`${data.class}_input_w`)
			input(type=data.type ? data.type : 'text' name=data.name ? data.name : `${data.class}_input` placeholder=data.place ? data.place : '')
// INPUT

// Policy
mixin policy(data)
	.global_policy_form(class=data.class ? data.class : '')!=`Отправляя данные, вы соглашаетесь с <a target="_blank" href="/policy.html">политикой конфиденциальности.</a>`
// Policy

// Subcategory


mixin sub(data)
	li.subcat_card(data-aos="fade-up") 
		a(href="/")
			.subcat_img 
				img(src=`i/sub/${data.img}.jpg` ? `i/sub/${data.img}.jpg` : `i/sub/mobile.jpg`, alt="")
			h3=data.name ? data.name : 'Мобильные шатры'

// Subcategory

